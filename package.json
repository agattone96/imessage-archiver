{
  "name": "archiver",
  "version": "1.1.0",
  "description": "iMessage Archiver - Desktop Application",
  "homepage": "https://github.com/antigravity/archiver",
  "author": {
    "name": "Antigravity",
    "email": "support@antigravity.ai"
  },
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --mac",
    "build-all": "electron-builder -mwl"
  },
  "build": {
    "appId": "com.antigravity.imessagearchiver",
    "productName": "Archiver",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "icon": "build/ArchiverIcon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 180,
          "y": 220,
          "type": "file"
        },
        {
          "x": 520,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 700,
        "height": 400
      }
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "shortcutName": "Archiver"
    },
    "linux": {
      "category": "Utility",
      "icon": "build/icons",
      "desktop": {
        "Name": "Archiver",
        "Comment": "iMessage Archiver",
        "Icon": "archiver"
      },
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "files": [
      "electron/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.icns",
        "to": "icon.icns"
      },
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "build/icon.icns",
        "to": "icon.icns"
      },
      {
        "from": "build/icons",
        "to": "icons"
      },
      {
        "from": "dashboard.py",
        "to": "dashboard.py"
      },
      {
        "from": "app_icon.png",
        "to": "app_icon.png"
      },
      {
        "from": "backend",
        "to": "backend"
      },
      {
        "from": "bin",
        "to": "bin"
      },
      {
        "from": "requirements.txt",
        "to": "requirements.txt"
      }
    ]
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}